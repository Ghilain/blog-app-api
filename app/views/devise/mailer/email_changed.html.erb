<section>
<p>Hello <%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p>We're texting you to notify that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
<% else %>
  <p>We're texting you to notify that your email has been changed to <%= @resource.email %>.</p>
<% end %>
</section>
