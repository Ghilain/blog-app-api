 <%= render partial: "components/navbar"%>
    <section>
        <div class="user_list">
            <div class="user_prof">
               <img src=<%= @user.photo %> alt="profile pic">
            </div>
            <div class="user_data">
               <h2><%= @user.name%></h1>
                <p>Post number: <%= @user.posts_count %></p>
            </div>
        </div>
       
        <div class="user_bio">
            <h2>Bio<h2>
            <p> <%= @user.bio %></p>
        </div>
           
        <div class="center">
            <%= @user.recent_three_posts.each do |post|  %>
            <li  class="list_post">
                <h2>Post #<%= post.id%></h1>
                <div class="title_post">
                    <h3><%=link_to post.title, user_post_path(@user.id, post) %></h3>
                    <p><%= post.text %></p>
                    <div class="post_info_sumr">
                        <p>Comments: <%= post.comments_count.nil? ? 0 : post.comments_count %>  </p>
                        <p>Likes: <%= post.likes_count.nil? ? 0 : post.likes_count %></p>
                    </div>
                </div>
            </li>
            <% end %>

            <button><%=link_to 'See all posts', user_posts_path(@user), :class => 'see-all-btn'%></button>
        </div> 
    </section>

        